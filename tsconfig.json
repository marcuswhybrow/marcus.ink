{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["./components/*"],
      "@layouts/*": ["./components/layouts/*"],
      "@articles/*": ["./articles/*"],
      "@pages/*": ["./pages/*"],
      "@lib/*": ["./lib/*"]
    }
  }
}
