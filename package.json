{
  "name": "marcus.ink",
  "version": "2.0.0",
  "description": "Marcus' articles",
  "main": "index.js",
  "repository": "git@github.com:marcuswhybrow/marcus.ink.git",
  "author": "Marcus Whybrow <m@rcus.ink>",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "dev": "next",
    "article": "./scripts/article.sh",
    "dream": "./scripts/article.sh dreams",
    "lint": "tsc --noEmit && eslint '*/**/*.{js,ts,tsx,mdx}' --quiet --fix",
    "build": "next build && next export"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:mdx/recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "rules": {
      "react/react-in-jsx-scope": 0
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "git add"
    ]
  },
  "babel": {
    "presets": [
      "next/babel"
    ],
    "plugins": [
      [
        "styled-components",
        {
          "ssr": true,
          "displayName": true,
          "preprocess": false
        }
      ]
    ]
  },
  "dependencies": {
    "@mdx-js/loader": "^1.6.0",
    "@next/mdx": "^9.3.6",
    "glob": "^7.1.6",
    "next": "^9.3.6",
    "next-mdx-enhanced": "^2.5.0",
    "next-mdx-frontmatter": "^0.0.3",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "remark-emoji": "^2.1.0",
    "remark-external-links": "^6.0.0",
    "remark-footnotes": "^1.0.0",
    "remark-images": "^2.0.0",
    "styled-components": "^5.1.0"
  },
  "devDependencies": {
    "@types/node": "^13.13.4",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.7",
    "@types/styled-components": "^5.1.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "babel-plugin-styled-components": "^1.10.7",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-mdx": "^1.6.9",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.0",
    "netlify-plugin-cache-nextjs": "^1.4.0",
    "prettier": "^2.0.5",
    "typescript": "^3.8.3"
  }
}
